
@{
    ViewBag.Title = "Albums";
}

<h2>Albums list</h2>

<div class="row">
    <div class="col-md-4">
        <label>Albums</label>
        <select class="form-control" id="ddlAlbums">
        </select>
    </div>
    <div class="col-md-4">
        <br />
        <button id="btnViewAlbum" class="btn btn-primary">Visualizar album</button>
    </div>
    <div class="col-md-4"></div>
</div>
<hr />
<div class="row">
    <div class="col-md-12" style="height:350px; overflow-y:scroll;" id="photos">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th class="center">Título</th>
                    <th class="center">Foto</th>
                    <th class="center">Accion</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="3">No hay elementos para mostrar</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12" style="height:350px; overflow-y:scroll;">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th class="center">Nombre</th>
                    <th class="center">Email</th>
                    <th class="center">Detalle</th>
                </tr>
            </thead>

            <tbody id="comments">
                <tr>
                    <td colspan="3">No hay elementos para mostrar</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <script>
        var urlPhotos = '@Url.Action("GetPhotos", "Albums")';
    </script>
    <script src="~/Scripts/pages/Albums.js"></script>
}
